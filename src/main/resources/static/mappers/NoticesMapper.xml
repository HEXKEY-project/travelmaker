<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hexkey.travelmaker.notices.dao.NoticesMapper">
    <resultMap id="noticesList" type="com.hexkey.travelmaker.notices.dto.NoticesDTO">
        <id property="no" column="NOTICE_CODE"/>
        <result property="body" column="NOTICE_BODY"/>
        <result property="registeredDate" column="REGISTERED_DATE"/>
        <result property="title" column="NOTICE_TITLE"/>
        <result property="memberCode" column="MEMBER_CODE"/>
        <result property="modifiedDate" column="MODIFIED_DATE"/>
        <result property="deletedDate" column="DELETED_DATE"/>
        <result property="statusYN" column="STATUS_YN"/>
    </resultMap>

    <select id="selectTotalCount" resultType="_int" parameterType="hashmap">
        SELECT
        COUNT(*)
        FROM TBL_NOTICE
        <where>
            <if test="searchCondition == 'title'">
                NOTICE_TITLE LIKE '%' || #{ searchValue } || '%'
            </if>
            <if test="searchCondition == 'date'">
                REGISTERED_DATE LIKE '%' || #{ searchValue } || '%'
            </if>
            AND A.BOARD_STATUS = 'Y'
        </where>
    </select>

    <select id="selectNoticesList" resultMap="noticesList">
        SELECT
        NOTICE_CODE
        , NOTICE_BODY
        , REGISTERED_DATE
        , NOTICE_TITLE
        , MEMBER_CODE
        , MODIFIED_DATE
        , DELETED_DATE
        , STATUS_YN
        FROM TBL_NOTICE
        <where>
            <if test="searchCondition == 'title'">
                NOTICE_TITLE LIKE '%' || #{ searchValue } || '%'
            </if>
            <if test="searchCondition == 'date'">
                REGISTERED_DATE LIKE '%' || #{ searchValue } || '%'
            </if>
            AND STATUS_YN = 'Y'
        </where>
        ORDER BY NOTICE_CODE DESC
    </select>

</mapper>